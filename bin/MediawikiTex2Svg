#!/bin/bash
TMP=$(mktemp -d)
cd $TMP
echo $1>input.tex
echo "<!--The input-TeXFile:->>">&2
cat input.tex 1>&2
echo "<!--pdflatex-->">&2
time pdflatex input.tex -interaction=batchmode
echo "<!--pdfcrop-->">&2
time pdfcrop input.pdf crop.pdf 1>&2
echo "<!--pdf2svg-->">&2
time pdf2svg crop.pdf out.svg 1>&2
echo "<!--END-->">&2
cat out.svg
rm -rf $TMP