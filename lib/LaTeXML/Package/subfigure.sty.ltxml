DefConstructor('\subfigure[]{}',
	       "<ltx:inline-block class='subfigure' xml:id='#id' refnum='#refnum' ?#1(placement='#1')>"
	       . "#2"
	       . "?#1(<ltx:block class='caption'>#1</ltx:block>)"
	       ."</ltx:inline-block>",
	       properties=> sub { RefStepCounter('subfigure') });

